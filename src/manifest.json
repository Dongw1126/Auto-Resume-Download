{
  "name": "auto resume downloads",
  "version": "1.0.0",
  "description": "Automatically resume downloading unintentionally interrupted.",

  "icons": { "16": "icon16.png",
             "48": "icon48.png",
            "128": "icon128.png" },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
   },

  "manifest_version": 2
}
