{
  "name": "Auto Resume Downloads",
  "version": "1.0.2",
  "description": "Firefox extension that automatically resumes downloads.",

  "icons": {
    "48": "icon48.png",
    "96" : "icon96.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },


  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com",
      "strict_min_version": "42.0"
    }
  },

  "manifest_version": 2
}
